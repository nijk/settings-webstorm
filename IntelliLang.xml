<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="Angular2HTML" injector-id="js">
      <display-name>Angular2HTML</display-name>
      <value-pattern>*.*.html</value-pattern>
    </injection>
    <injection language="SCSS" injector-id="js">
      <display-name>StyledComponents</display-name>
      <prefix>dummy {</prefix>
      <suffix>}</suffix>
      <place><![CDATA[jsLiteralExpression().withText(string().matchesBrics("styled.+"))]]></place>
      <place><![CDATA[jsLiteralExpression().withText(string().startsWith("`// styled"))]]></place>
    </injection>
  </component>
</application>